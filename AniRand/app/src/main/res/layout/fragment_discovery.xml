<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.discovery.DiscoveryFragment">

    <ScrollView
        android:id="@+id/verticalScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/hScrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/trending_now"
                android:fadingEdge="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/image_view_small_width"
                        android:layout_height="@dimen/image_view_small_height"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/image_view_small_width"
                        android:layout_height="@dimen/image_view_small_height"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/image_view_small_width"
                        android:layout_height="@dimen/image_view_small_height"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView2" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/image_view_small_width"
                        android:layout_height="@dimen/image_view_small_height"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView3" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="@dimen/image_view_small_width"
                        android:layout_height="@dimen/image_view_small_height"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView4" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/text_notifications2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/hScrollView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/popular_this_season">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView6" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView7" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView8" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView9" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/text_notifications3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/hScrollView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/upcoming_next_season">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView11" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView12" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView13" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView14" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/text_notifications4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="viewStart"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:id="@+id/hScrollView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/all_time_popular">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView16" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView17" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView18" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="100sp"
                        android:layout_height="140sp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:src="@drawable/jobless_reincarnation_part2"
                        app:layout_constraintStart_toStartOf="@+id/imageView19" /> <!-- Make padding start and end dimen value and update all paddings in this file -->

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>